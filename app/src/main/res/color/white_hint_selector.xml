<?xml version="1.0" encoding="utf-8"?>


<!--
  Color selector for TextInputLayout hint and box stroke colors,
  making the color white in all relevant states.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
      When the TextInputLayout is enabled AND focused,
      use white color (e.g., user is typing in the field).
    -->
    <item android:color="@android:color/white" android:state_enabled="true" android:state_focused="true"/>

    <!--
      When the TextInputLayout is enabled but NOT focused,
      use white color (normal enabled state).
    -->
    <item android:color="@android:color/white" android:state_enabled="true"/>

    <!--
      Default fallback color (e.g., disabled state or any other),
      use white color to keep consistency.
    -->
    <item android:color="@android:color/white"/>


</selector>
