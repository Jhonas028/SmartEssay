<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/dirty_white">

        <!-- ================= CROPPED IMAGE SECTION ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_border"
            android:layout_marginTop="24dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/camera_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cropped Image:"
                android:textColor="@color/back_blue"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="Cropped Image"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- ================= OCR RESULT SECTION ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_border"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/ocrResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCR Result:"
                android:textColor="@color/back_blue"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ocr_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:elevation="2dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/addPageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Page"
                android:backgroundTint="@color/text_title_yellow"
                android:textColor="@color/back_blue"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ================= RUBRICS SECTION ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/yellow_border"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/back_blue"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUBRICS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Content / Ideas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Content / Ideas"
                    android:textColor="@color/back_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/contentPercentage"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="%"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Organization / Structure -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Organization / Structure"
                    android:textColor="@color/back_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/organizationPercentage"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="%"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Grammar and Formatting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grammar and Formatting"
                    android:textColor="@color/back_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/grammarPercentage"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="%"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Language Use / Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Language Use / Style"
                    android:textColor="@color/back_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/languageStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="%"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Other Rubrics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other Criteria (Optional)"
                    android:textSize="16sp"
                    android:textColor="@color/back_blue" />

                <EditText
                    android:id="@+id/etRubricOtherScore"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="%"
                    android:background="@drawable/edittext_background"
                    android:inputType="number" />
            </LinearLayout>

            <EditText
                android:id="@+id/otherTV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Enter your criteria (e.g., Creativity, Accuracy, Effort etc...)"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:textSize="13dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />
        </LinearLayout>

        <!-- ================= BUTTONS ================= -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/text_title_yellow"
            android:textColor="@color/back_blue"
            android:padding="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/back_blue"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textStyle="bold" />

        <!-- ================= SCORE SECTION ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:layout_marginBottom="50dp"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/scoreTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score and Feedback:"
                android:textColor="@color/back_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/scoresTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:scrollHorizontally="false"
                android:ellipsize="none"
                android:singleLine="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
