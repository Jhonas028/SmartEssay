<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatingAccounts.CreateTeacherAcc">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="80dp"
            android:paddingBottom="300dp">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Instructor Account"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat_alternates_extrabold" />

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/yellow_new"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:helperTextTextColor="@color/my_soft_red"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white_hint_selector"
                        android:imeOptions="actionNext"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- First name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fnameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="First name"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/yellow_new"
                    app:hintTextColor="@color/black"
                    app:helperTextTextColor="@color/my_soft_red"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fnameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white_hint_selector"
                        android:imeOptions="actionNext"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lnameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Last name"
                    app:helperTextTextColor="@color/my_soft_red"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/yellow_new"
                    app:hintTextColor="@color/black"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lnameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white_hint_selector"
                        android:imeOptions="actionNext"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/yellow_new"
                    app:hintTextColor="@color/black"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@android:color/black"
                    app:helperTextTextColor="@color/my_soft_red"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white_hint_selector"
                        android:imeOptions="actionNext"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/conpassTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Confirm password"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/yellow_new"
                    app:hintTextColor="@color/black"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@android:color/black"
                    app:helperTextTextColor="@color/my_soft_red"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/conpassET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white_hint_selector"
                        android:imeOptions="actionDone"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sign Up Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signupBTN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/button_blue_new"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white" />

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you already have an account?"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/logInTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Log in"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
