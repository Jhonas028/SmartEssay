<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:strokeColor="@android:color/holo_blue_bright"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/blue_border_background">

        <TextView
            android:id="@+id/text_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room 101"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_room_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Code: ABC123"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:hint="Room Code" />

        <TextView
            android:id="@+id/text_room_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Room Code"
            android:text="Room ID FDO: ABC123"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_date_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Created: March 15, 2024"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:hint="Date Created" />



        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Available Students: 25/30"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Available Students" />

        <TextView
            android:id="@+id/text_rubrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rubrics"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>