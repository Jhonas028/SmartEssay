<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="5dp">



    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Student Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/pill_shape">


                    <!-- Name and Status (Blue Section) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/pill_left_blue"
                        android:padding="15dp">

                        <!-- Student Name -->
                        <TextView
                            android:id="@+id/fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juan Dela Cruz"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_primary" />

                        <!-- Status Row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status: "
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textSize="16sp"
                                android:textColor="@color/red_pending" />
                        </LinearLayout>

                        <!-- Edit Score Button -->

                    </LinearLayout>

                    <!-- Score Section (Yellow Section) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/pill_right_yellow"
                     >

                        <EditText
                            android:id="@+id/tvScore"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="90"
                            android:textColor="@color/off_white"
                            android:textSize="50sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/editIcon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/edit_icon2"
                                android:contentDescription="Edit"
                                android:clickable="true"
                                android:layout_marginTop="5dp"
                                android:focusable="true"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:paddingRight="20dp"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/off_white"
                                android:textSize="30sp" />
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

            <!-- Feedback Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_filled_round_corners">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Feedback"
                    android:textColor="@color/yellow_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <!-- Inner White Layout for Feedback Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blue_border_round_edittext"
                    android:padding="10dp"
                    android:elevation="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTintMode="src_over">

                    <TextView
                        android:id="@+id/tvEssayFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Feedback:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:justificationMode="inter_word" />
                </LinearLayout>

            </LinearLayout>

            <!-- ================= STUDENT ESSAY SECTION ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_filled_round_corners">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Student Essay"
                    android:textColor="@color/yellow_accent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Inner White Layout for Essay Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blue_border_round_edittext"
                    android:padding="10dp"
                    android:elevation="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTintMode="src_over">

                    <TextView
                        android:id="@+id/tvConvertedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Student's Essay..."
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:justificationMode="inter_word"
                        android:paddingTop="5dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- ================= BUTTON SECTION ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

               />

                <!-- Row for Save and Cancel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                  >

                    <!-- Cancel Button -->
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/yellow_accent"
                        android:textColor="#003399"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Save &amp; Post"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/blue_primary"
                        android:textColor="@color/off_white"
                        android:paddingVertical="12dp" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>