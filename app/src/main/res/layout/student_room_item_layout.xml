<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:strokeColor="@color/blue_primary"
    app:strokeWidth="2dp"
    android:backgroundTint="@color/off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Room Name -->
        <TextView
            android:id="@+id/text_room_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ROOM 101"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/status_group"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />

        <!-- Date Created (below room name) -->
        <TextView
            android:id="@+id/text_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mar 15, 2024"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/text_room_name"
            app:layout_constraintTop_toBottomOf="@+id/text_room_name"
            android:layout_marginTop="4dp" />

        <!-- Status Group (aligned right to room name) -->
        <LinearLayout
            android:id="@+id/status_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_room_name">

            <!-- Status -->
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Posted"
                android:textColor="#4CAF50"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
