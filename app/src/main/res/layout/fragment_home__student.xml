<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TeacherHomepage.HomePage_Teacher">

    <!-- Main vertical layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Search EditText -->
            <EditText
                android:id="@+id/edit_search_prompt"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:hint="Search activity..."
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:background="@drawable/search_edittext_bg"
                android:drawableStart="@drawable/outline_search_24"
                android:drawablePadding="10dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rooms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="8dp"
                tools:listitem="@layout/student_room_item_layout" />

            <TextView
                android:id="@+id/tv_empty_essays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No submitted essay yet"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Floating Add Room Button at Bottom-Right -->
    <ImageButton
        android:id="@+id/btn_add_room"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="40dp"
        android:background="@drawable/round_all_yellow_button"
        android:src="@drawable/join"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:contentDescription="Add Room" />

</FrameLayout>
